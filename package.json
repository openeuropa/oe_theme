{
  "name": "ecl-twig-build",
  "license": "EUPL-1.1",
  "description": "OpenEuropa base theme.",
  "private": true,
  "scripts": {
    "build:copy": "ecl-builder copy",
    "build:styles": "ecl-builder styles",
    "build": "npm-run-all --parallel build:* -ln",
    "watch:scripts": "chokidar \"./sass/**/*.js\" -i \"/node_modules/\" -c \"eslint {path} & npm run build:scripts\"",
    "watch:styles": "chokidar \"./sass/**/*.scss\" -i \"/node_modules/\" -c \"stylelint {path} & npm run build:styles\"",
    "watch": "npm-run-all --parallel watch:* -ln",
    "prepare": "patch-package"
  },
  "dependencies": {
    "@ecl-twig/ec-components": "2.37.0",
    "@ecl/builder": "2.36.0",
    "@ecl/ec-component-fact-figures": "2.37.0",
    "@ecl/ec-component-form-help-block": "2.37.0",
    "@ecl/ec-component-media-container": "2.37.0",
    "@ecl/ec-preset-editor": "2.37.0",
    "@ecl/ec-preset-legacy-website": "2.37.0",
    "@ecl/ec-theme-default": "2.37.0",
    "@ecl/ec-utility-background": "2.37.0",
    "@ecl/ec-utility-border": "2.37.0",
    "@ecl/eu-component-form-help-block": "2.37.0",
    "@ecl/eu-preset-legacy-website": "2.37.0",
    "@ecl/eu-theme-default": "2.37.0",
    "@ecl/eu-utility-background": "2.37.0",
    "@ecl/eu-utility-border": "2.37.0",
    "@ecl/stylelint-config": "0.2.1",
    "chokidar-cli": "1.2.0",
    "node-sass": "4.13.1",
    "npm-run-all": "4.0.2",
    "patch-package": "^5.1.2",
    "stylelint": "9.1.1",
    "stylelint-config-prettier": "2.1.0",
    "stylelint-no-browser-hacks": "^1.1.0",
    "svg4everybody": "2.1.9"
  },
  "engines": {
    "node": ">=8",
    "yarn": ">=0.27.5"
  }
}
