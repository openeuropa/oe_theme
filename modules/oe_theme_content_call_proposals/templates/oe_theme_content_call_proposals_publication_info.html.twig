{% if link is empty %}
  {{ date }}
{% else %}
  {% set _link %}
    {% include '@ecl-twig/link' with {
      link: {
        type: 'standalone',
        label: link.title,
        path: link.url,
        icon_position: 'after'
      },
      icon: get_link_icon(link.url)
    } %}
  {% endset %}
  {{ '@date in'|t({'@date': date }) }} {{ _link  }}
{% endif %}
