{#
/**
 * @file
 * Render a list with illustration pattern preview with ECL icons.
 */
#}
{% set _items = [] %}
{% for item in items %}
  {% set _item = item %}
  {# Transform icon into ecl array. #}
  {% if _item.icon %}
    {% set _item = _item|merge({'icon': {
      path: ecl_icon_path,
      name: item.icon
    }}) %}
  {% endif %}
  {% set _items = _items|merge([_item]) %}
{% endfor %}

{% include 'pattern-list-with-illustration.html.twig' with {
  'variant': variant,
  'column': column,
  'zebra': zebra,
  'items': _items
} only %}
