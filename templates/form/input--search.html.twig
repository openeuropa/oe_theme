{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 * - disabled: Optional (boolean): is disabled (optional, default: false).
 * - invalid: Optional (boolean): has error (optional, default: false).
 * - extra_attributes: Optional (boolean): additional attributes (optional, default: false).
 *
 * @see ./core/themes/stable/templates/form/input.html.twig
 */
#}
{% include '@ecl/text-input' with {
  id: input_array.id,
  name: input_array.name,
  invalid: input_array.invalid,
  disabled: input_array.disabled,
  type: input_array.type,
  extra_classes: input_array.class|safe_join(' '),
  extra_attributes: input_array.extra_attributes
} %}
