{#
/**
 * @file
 * Theme override for the OE search block wrapper.
 *
 * @see ./core/themes/stable/templates/block/block.html.twig
 */
#}
<div class="ecl-site-header__search-container">
  <a
    class="ecl-button ecl-button--ghost ecl-site-header__search-toggle"
    href=""
    data-ecl-search-toggle="true"
    aria-controls="{{ content['#id'] }}"
    aria-expanded="false"
  >
    {%- include '@ecl-twig/icon' with {
      icon: {
        name: 'search',
        path: ecl_icon_path,
        size: 's',
        extra_attributes: [
          { name: 'aria-hidden', value: true }
        ]
      }
    } only -%}
    {{ 'Search'|t }}
  </a>
  {{ content }}
</div>
