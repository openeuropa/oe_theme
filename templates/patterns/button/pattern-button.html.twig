{#
/**
 * @file
 * Button.
 */
#}
{% if variant == 'default' %}
  {% include '@ecl-twig/link/link' with {
    'link': {
      'type': 'standalone',
      'label': label,
      'path': href,
      'icon_position': icon_position|default('after')
    },
    'icon': {
      'path': ecl_icon_path,
      'type': 'ui',
      'name': icon,
      'size': 's'
    }
  } only %}
{% else %}
  {% include '@ecl-twig/button/button' with {
    'label': label,
    'variant': variant|replace({'_':'-'}),
    'type': type_attribute,
    'icon': {
      'path': ecl_icon_path,
      'type': 'ui',
      'name': icon,
      'size': 's'
    },
    'icon_position': icon_position|default('after'),
    'disabled': disabled
  } only %}
{% endif %}
