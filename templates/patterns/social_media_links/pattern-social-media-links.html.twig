{#
/**
 * @file
 * Social media links.
 */
#}

{% set _links = [] %}
{% for link in links %}
  {% set _link = {
    link: {
      path: link.url,
      label: link.label,
      icon_position: 'before',
    }
  } %}
  {% if link.service is not empty %}
    {% set _link = _link|merge({
      icon: {
        path: ecl_icon_social_media_path,
        name: link.service ~ '-color',
        size: 'l'
      }
    }) %}
  {% endif %}
  {% set _links = _links|merge([_link]) %}
{% endfor %}

{% include '@ecl-twig/social-media-follow' with {
  'description': title,
  'links': _links,
} %}
