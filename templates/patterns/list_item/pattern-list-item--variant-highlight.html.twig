{#
/**
 * @file
 * Default implementation for the highlight list item component.
 */
#}
{% if url %}
  {% set title = {
    link: {
      label: title,
      path: url,
      type: "standalone",
      external: external_link,
      icon_path: ecl_icon_path
    }
  } %}
{% endif %}
{% if image %}
  {% set _image = {
    img: image
  } %}
{% endif %}
{% include '@ecl-twig/card' with {
  title: title,
  picture: _image,
  description: detail|smart_trim(length),
  labels: badges,
} only %}
