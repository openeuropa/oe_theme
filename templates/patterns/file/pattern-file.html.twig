{#
/**
 * @file
 * File download pattern.
 */
#}
{% set file_icon_size = ecl_component_library == 'ec' ? '2xl' : 'm' %}
{% include '@ecl-twig/file' with {
  'title': file.title,
  'language': file.language_code|to_native_language,
  'meta': '(' ~ file.size|format_size ~ ' - ' ~ file.extension|upper ~ ')',
  'icon': {
    'path': ecl_icon_path,
    'name': file.extension|to_file_icon,
    'size': file_icon_size,
  },
  'download': {
    'link': {
      'label': button_label|default('Download'|t),
      'path': file.url,
    },
    'icon': {
      'path': ecl_icon_path,
    },
  }
} only %}
