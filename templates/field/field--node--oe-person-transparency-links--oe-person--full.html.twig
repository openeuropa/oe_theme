{#
/**
 * @file
 * Theme override for the Transparency links field template of the Person content type.
 *
 * @see ./core/themes/stable/templates/field/field.html.twig
 */
#}
{% for item in items %}
  <div class="ecl-u-pt-l ecl-u-pb-m ecl-u-border-bottom ecl-u-border-color-grey-15">
    {% include '@ecl-twig/link' with {
      link: {
        type: 'standalone',
        label: item.content['#title'],
        path: item.content['#url'],
        external: item.content['#url'].toString()|is_external_url,
        icon_path: ecl_icon_path
      }
    } %}
  </div>
{% endfor %}
